  <div class="container" style="margin-top:20px;" >
 
  <nav class="navbar bg-light">
  <div class="container-fluid">
    <a class="navbar-brand" href="<%= root_path %>">
     <img src="<%= asset_url('logo.jpg') %>" alt="Logo" width="45" height=40"" class="d-inline-block align-text-top">
      FRIENDS
    </a>
    <%= link_to "Add New Friend", new_friend_path, {class: "btn btn-outline-primary"} %>

  </div>
</nav>
<div class="text-success">
  <hr>
</div>
<div class="container" >
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Name</th>
      <th scope="col">Location</th>
      <th scope="col">Date of Birth</th>
      <th scope="col">Age</th>
      <th scope="col">Contact</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
  <% @friend.each do |fr|%>
    <tr>
      <th scope="row"><%= fr.id %></th>
      <td><%= fr.name %></td>
      <td><%= fr.location %></td>
      <td><%= fr.dob %></td>
      <td><%= (((Date.today - fr.dob.to_date)/365).floor) %></td>
      <td><%= fr.contact %></td>
      <td>
      <div class="btn-group"><%= link_to "Show Friend",friend_path(fr.id), {class:"btn btn-warning"}%><%= link_to "Edit Friend", edit_friend_path(fr), {class:"btn btn-info"}%><%= button_to "Remove Friend",friend_path(fr),data: {turbo_confirm: "Are you sure to delete??"}, method: :delete,  class:"btn btn-danger" %>
        </div>
        </td>
    </tr>
    <% end %>
   
  </tbody>
</table>


</div>

  </div>