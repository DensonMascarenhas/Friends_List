
<% if @friend.errors.any? %>
<div class="alert alert-danger" role="alert">
  <h4 class="alert-heading"><%= pluralize(@friend.errors.count, "error") %> prohibited this todo from being saved:!</h4>
    <ul>
        <% @friend.errors.each do |error| %>
          <li class="mb-0"><%= error.full_message %></li>
        <% end %>
      </ul>
    <hr>
  <p class="mb-0">Please check and give proper inputs.</p>
</div>
    
  <% end %>

<%= form_with(model: @friend) do |f| %>


<div class="mb-3 row">
    <%= f.label :name, "Name",{class:"form-label"} %>
    <%= f.text_field :name, {class:"form-control", placeholder:"Enter name...", required: "true"} %>
</div>

<div class="mb-3 row">
    <%= f.label :location, "Location",{class:"form-label"} %>
    <%= f.text_field :location, {class:"form-control", placeholder:"Enter location...", required: "true"} %>
</div>

<div class="mb-3 row">
    <%= f.label :dob, "Date Of Birth",{class:"form-label"} %>
    <%= f.text_field :dob, {class:"form-control", placeholder:"Enter Date of Birth...", required: "true", type:"date"} %>
</div>

<div     class="mb-3 row">
    <%= f.label :contact, "Contact",{class:"form-label"} %>
    <%= f.text_field :contact, {class:"form-control", placeholder:"Enter Contact...",type:"number", required: "true"} %>
</div>
<div class="mb-3 row">
<center>
    <%=f.submit(class:"btn btn-primary mb-3")%>
    </center>
</div>
<% end %>